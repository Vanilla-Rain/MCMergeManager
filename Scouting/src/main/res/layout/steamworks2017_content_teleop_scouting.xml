<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app2=""
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/steamworks2017_activity_teleop_scouting"
    tools:context=".steamworks2017.gui.TeleopScouting">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_height="fill_parent">

        <Button
            android:text="PICKUP"
            android:id="@+id/gearPickupButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="25dp"
            android:background="@android:color/white"
            android:textColor="@android:color/holo_purple"
            android:visibility="visible"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium" />

        <Button
            android:text="SHOOTING"
            android:id="@+id/ballShootingButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="25dp"
            android:layout_alignParentRight="true"
            android:background="@android:color/white"
            android:textColor="@android:color/holo_purple"
            android:visibility="visible"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewGameTime"

            android:textColor="@android:color/holo_purple"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:text="STARTED CLIMBING"
            android:id="@+id/startedClimbingButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="350dp"
            android:padding="20dp"
            android:layout_centerHorizontal="true"
            android:background="@android:color/white"
            android:textColor="@android:color/holo_purple"
            android:visibility="visible"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium" />

        <Button
            android:text="pickup"
            android:id="@+id/ballPickupButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="25dp"
            android:padding="20dp"
            android:background="@android:color/white"
            android:textColor="@android:color/holo_purple"
            android:visibility="visible"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:id="@+id/numberBallsHolding"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gearDeliveryButton"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_marginTop="18dp" />

        <Button
            android:text="FAIL"
            android:layout_height="45dp"
            android:layout_above="@+id/ballPickupButton"
            android:id="@+id/gearFailButton"
            android:layout_toEndOf="@+id/gearImageView"
            android:layout_width="53dp"
            android:background="@android:color/white"
            android:textColor="@android:color/holo_purple"
            tools:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_gear"
            android:id="@+id/gearImageView"
            android:layout_below="@+id/gearPickupButton"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="BALLS"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="150dp"
            android:id="@+id/ballsTextView"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@android:color/holo_purple"
            android:gravity="center_horizontal" />

        <TextView
            android:text="GEARS"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gearsTextView"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@android:color/holo_purple"
            android:gravity="center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_fuel"
            android:id="@+id/imageView3"
            android:layout_below="@+id/gearDeliveryButton"
            android:layout_toEndOf="@+id/startedClimbingButton" />

        <Button
            android:text="DELIVERY"
            android:id="@+id/gearDeliveryButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="25dp"
            android:layout_alignParentRight="true"
            android:background="@android:color/white"
            android:textColor="@android:color/holo_purple"
            android:visibility="visible"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:text="CLIMBING"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ropeClimbingTextview"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="300dp"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@android:color/holo_purple"
            android:gravity="center_horizontal" />


    </RelativeLayout>
</ScrollView>


